<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Authors</title>
    <script>
        function showEditForm(button) {
            // Get row data from the button's dataset
            const authorId = button.dataset.authorId;
            const name = button.dataset.name;
            const description = button.dataset.description;

            // Populate the form fields with the row data
            document.getElementById('edit-author-id').value = authorId;
            document.getElementById('edit-name').value = name;
            document.getElementById('edit-description').value = description;
            document.getElementById('edit-form').scrollIntoView({ behavior: 'smooth' });
        }
    </script>
</head>

<body>
    <h1>Authors</h1>

    <!-- authors Table -->
    <table border="1">
        <thead>
            <tr>
                <th>Author ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td>{{this.author_id}}</td>
                <td>{{this.name}}</td>
                <td>{{this.description}}</td>
                <td>
                    <button onclick="showEditForm(this)" data-author-id="{{this.author_id}}"
                        data-name="{{this.name}}" data-description="{{this.description}}">
                        Edit
                    </button>
                </td>
                <td>
                    <form method="POST" action="/delete-author">
                        <input type="hidden" name="author_id" value="{{this.author_id}}">
                        <button type="submit"
                            onclick="return confirm('Are you sure you want to delete this author?');">Delete</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <!-- Edit author Form -->
    <h2>Edit author</h2>
    <form id="edit-form" method="POST" action="/edit-author">
        <input type="hidden" name="author_id" id="edit-author-id">
        <label for="edit-name">Name:</label>
        <input type="text" name="name" id="edit-name" required>
        <label for="edit-description">Description:</label>
        <input type="text" name="description" id="edit-description">
        <button type="submit">Update author</button>
    </form>

    <!-- Add author Form -->
    <h2>Add author</h2>
    <form id="add-author-form" method="POST" action="/add-author">
        <label for="add-name">Name:</label>
        <input type="text" name="name" id="add-title" required>
        <label for="add-description">Description:</label>
        <input type="text" name="description" id="add-description">
        <button type="submit">Add author</button>
    </form>
</body>

</html>