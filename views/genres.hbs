<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>genres</title>
    <script>
        function showEditForm(button) {
            // Get row data from the button's dataset
            const genreId = button.dataset.genreId;
            const title = button.dataset.title;
            const description = button.dataset.description;

            // Populate the form fields with the row data
            document.getElementById('edit-genre-id').value = genreId;
            document.getElementById('edit-title').value = title;
            document.getElementById('edit-description').value = description;

            // Scroll to the form if needed
            document.getElementById('edit-form').scrollIntoView({ behavior: 'smooth' });
        }
    </script>
</head>

<body>
    <h1>genres</h1>

    <!-- genres Table -->
    <table border="1">
        <thead>
            <tr>
                <th>Genre ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td>{{this.genre_id}}</td>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>
                    <button onclick="showEditForm(this)" data-genre-id="{{this.genre_id}}"
                        data-title="{{this.title}}" data-description="{{this.description}}">
                        Edit
                    </button>
                </td>
                <td>
                    <form method="POST" action="/delete-genre">
                        <input type="hidden" name="genre_id" value="{{this.genre_id}}">
                        <button type="submit"
                            onclick="return confirm('Are you sure you want to delete this genre?');">Delete</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <!-- Edit genre Form -->
    <h2>Edit genre</h2>
    <form id="edit-form" method="POST" action="/edit-genre">
        <input type="hidden" name="genre_id" id="edit-genre-id">
        <label for="edit-title">Title:</label>
        <input type="text" name="title" id="edit-title" required>
        <label for="edit-description">Description:</label>
        <input type="text" name="description" id="edit-description" required>
        <button type="submit">Update genre</button>
    </form>

    <!-- Add genre Form -->
    <h2>Add genre</h2>
    <form id="add-genre-form" method="POST" action="/add-genre">
        <label for="add-title">Title:</label>
        <input type="text" name="title" id="add-title" required>
        <label for="add-description">Description:</label>
        <input type="text" name="description" id="add-description" required>
        <button type="submit">Add genre</button>
    </form>
</body>

</html>