<h1>Genres</h1>

{{#if editGenre}}
<form method="POST" action="/update-genre">
    <input type="hidden" name="genre_id" value="{{editGenre.genre_id}}">
    <button type="submit">Update Genre</button>
</form>
{{else}}
{{/if}}

<!-- Genres Table -->
<table border="1">
    <thead>
        <tr>
            <th>Genre ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each data}}
        <tr>
            <td>{{this.genre_id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>
                <button type="button" onclick="window.location.href='/edit-genre/{{this.genre_id}}'">Edit</button>
                <form method="POST" action="/delete-genre" style="display:inline;">
                    <input type="hidden" name="genre_id" value="{{this.genre_id}}">
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<!-- Form to Add a New Genre -->
<h2>Add a New Genre</h2>
<form method="POST" action="/add-genre-form">
    <label for="genre-title">Title:</label>
    <input type="text" name="genre-title" id="genre-title" required>

    <label for="genre-description">Description:</label>
    <input type="text" name="genre-description" id="genre-description">

    <input type="submit" value="Add Genre">
</form>